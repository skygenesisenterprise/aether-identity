{
  "name": "@aether-identity/package",
  "version": "1.0.0",
  "description": "Aether Identity Package Ecosystem - Multi-language SDKs and tools",
  "private": true,
  "type": "module",
  "workspaces": [
    "node",
    "vscode",
    "extension",
    "snap",
    "docker",
    "shared"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "build:node": "pnpm --filter @aether-identity/node build",
    "build:vscode": "pnpm --filter @aether-identity/vscode build",
    "build:docker": "pnpm --filter @aether-identity/docker build",
    "build:shared": "pnpm --filter @aether-identity/shared build",
    "dev": "pnpm -r dev",
    "dev:node": "pnpm --filter @aether-identity/node dev",
    "dev:vscode": "pnpm --filter @aether-identity/vscode dev",
    "dev:docker": "pnpm --filter @aether-identity/docker dev",
    "test": "pnpm -r test",
    "test:node": "pnpm --filter @aether-identity/node test",
    "test:docker": "pnpm --filter @aether-identity/docker test",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "install:all": "pnpm install && pnpm -r install",
    "update:all": "pnpm update && pnpm -r update",
    "build:golang": "cd golang && go build ./...",
    "build:swift": "cd swift && swift build",
    "build:python": "cd python && python -m build",
    "build:rust": "cd rust && cargo build",
    "build:java": "cd java && mvn compile",
    "build:dotnet": "cd .net && dotnet build",
    "build:php": "cd php && composer install",
    "build:ruby": "cd ruby && bundle install",
    "build:cli": "cd cli && go build",
    "build:github": "cd github && go build",
    "build:k8s": "cd k8s && go build",
    "build:action": "cd action && echo 'GitHub Action built'",
    "build:gcc": "cd gcc && make",
    "test:golang": "cd golang && go test ./...",
    "test:swift": "cd swift && swift test",
    "test:python": "cd python && pytest",
    "test:rust": "cd rust && cargo test",
    "test:java": "cd java && mvn test",
    "test:dotnet": "cd .net && dotnet test",
    "test:php": "cd php && vendor/bin/phpunit",
    "test:ruby": "cd ruby && bundle exec rspec",
    "test:cli": "cd cli && go test ./...",
    "test:github": "cd github && go test ./...",
    "test:k8s": "cd k8s && go test ./...",
    "publish:node": "pnpm --filter @aether-identity/node publish",
    "publish:docker": "pnpm --filter @aether-identity/docker publish",
    "publish:shared": "pnpm --filter @aether-identity/shared publish",
    "version:check": "pnpm -r version",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,ts,tsx,json,md,yml,yaml}\""
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/skygenesisenterprise/aether-identity.git",
    "directory": "package"
  },
  "keywords": [
    "identity",
    "authentication",
    "oauth",
    "oidc",
    "sdk",
    "typescript",
    "go",
    "swift",
    "python",
    "rust",
    "java",
    "dotnet",
    "php",
    "ruby"
  ],
  "author": {
    "name": "Sky Genesis Enterprise",
    "email": "developer@skygenesisenterprise.com",
    "url": "https://skygenesisenterprise.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/skygenesisenterprise/aether-identity/issues"
  },
  "homepage": "https://github.com/skygenesisenterprise/aether-identity/tree/main/package#readme"
}
